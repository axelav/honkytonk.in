{
  "name": "honkytonk.in",
  "description": "https://honkytonk.in",
  "version": "1.0.0",
  "dependencies": {
    "@mdx-js/loader": "^1.5.3",
    "@mdx-js/mdx": "^1.5.3",
    "@mdx-js/react": "^1.5.3",
    "@next/mdx": "^9.1.6",
    "classnames": "^2.2.6",
    "d3": "^5.14.2",
    "journalize": "^2.2.0",
    "luxon": "^1.21.3",
    "next": "^9.3.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-lazyload": "^2.6.5",
    "remark-emoji": "^2.0.2",
    "remark-images": "^0.15.6",
    "tachyons": "^4.11.1",
    "topojson-client": "^3.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^5.16.0",
    "eslint-config-react-app": "^3.0.8",
    "eslint-plugin-flowtype": "^3.13.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.2.1",
    "prettier": "^1.19.1"
  },
  "scripts": {
    "dev": "next dev -p 4200",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "deploy:dev": "now",
    "deploy:staging": "now --prod",
    "deploy:prod": "now --prod && now alias set https://honkytonkin.axelav.vercel.app honkytonk.in"
  },
  "engines": {
    "node": ">10.15.0"
  },
  "author": "Axel Anderson <axel@ftml.net>",
  "private": true,
  "eslintConfig": {
    "extends": "react-app",
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "default-case": "off",
      "react/prop-types": 1,
      "jsx-a11y/anchor-is-valid": 0,
      "react-hooks/rules-of-hooks": "error"
    }
  },
  "lint-staged": {
    "components/**/*.{js}": [
      "prettier --single-quote --no-semi --write",
      "git add"
    ],
    "pages/**/*.{js,md}": [
      "prettier --single-quote --no-semi --write",
      "git add"
    ],
    "style.css": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
